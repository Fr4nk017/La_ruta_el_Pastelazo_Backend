# Configuración del Servidor
PORT=4000
NODE_ENV=development

# MongoDB Atlas
# Obtener la URI de conexión desde MongoDB Atlas
# Formato: mongodb+srv://<usuario>:<password>@<cluster>.mongodb.net/<nombre_db>?retryWrites=true&w=majority&appName=Cluster0
MONGO_URI=mongodb+srv://tu_usuario:tu_password@cluster0.xxxxx.mongodb.net/nombre_base_datos?retryWrites=true&w=majority&appName=Cluster0

# JWT Secret
# Generar un secreto seguro con: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# Configuración adicional (opcional)
# CORS_ORIGIN=http://localhost:3000
# MAX_FILE_SIZE=10485760
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
